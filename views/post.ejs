<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2 class="h4"><%= post.title %></h2>
      <img class="img-fluid mw-100" src="<%= post.image%>" />

      <!-- Icons below img -->
      <div class="row  justify-content-between">
        <form
          class="col-2"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary btn-small fa fa-heart" type="submit"></button>
        </form>
        <h3 class="h6 col-2">Likes: <%= post.likes %></h3>
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary btn-small fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>

    <!-- Caption; new col -->
    <div class="col-6 mt-4">
      <p><%= post.caption %></p>
      <!--previous /div  -->
    <!-- List of Comments -->
    <div class="row-3">
      <ul class="row list-unstyled">
        <% for(var i=0; i<comments.length; i++) {%>
          <li class="row-6 justify-content-between mt-5">
            <p><%= comments[i].comment %></p>

            <!-- Icons below comments-->
            <div class="row align-items-center justify-content-between">
              <form
                class="col-3"
                action="/post/likePost/<%= post.id %>?_method=PUT"
                method="POST"
              >
                <button class="btn btn-primary btn-small fa fa-heart" type="submit"></button>
              </form>
              <h3 class="h6 col-3">Likes: <%= post.likes %></h3>
              <%if(post.user == user.id){ %>
              <form
                action="/post/deletePost/<%= post.id %>?_method=DELETE"
                method="POST"
                class="col-3"
              >
                <button class="btn btn-primary btn-small fa fa-trash" type="submit"></button>
              </form>
              <%}%>
            </div>
          </li>
          <% } %>
          </ul>
        </div>


      <!-- Create Comment -->
      <form action="/comment/createComment/<%= post._id%>" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Comment</label>
            <input type="text" class="form-control" id="comment" name="comment">
        </div>
        <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
      </form>
    </div>

    <!-- Profile/Feed -->
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary mt-3" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
